extends layout
block content
    .w3-container
        .w3-card-4
            header.w3-container.w3-teal
                h3 Personagem da BD
            .w3-container
                form.w3-container(action='/adicionaPersonagem' method='POST' enctype='multipart/form-data')
                    label.w3-text-teal
                        b Nome
                    input.w3-input.w3-border.w3-light-grey(type='text' name='nome')
                    label.w3-text-teal
                        b Ficheiro
                    input.w3-input.w3-border.w3-light-grey(type='file' name='ficheiro')
                    input.w3-btn.w3-blue-grey(type='submit' value='Enviar')
                fieldset.w3-container(id='lista')
            footer.w3-container.w3-teal
                address Gerado por FormApp
                